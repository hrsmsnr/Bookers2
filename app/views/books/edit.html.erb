<div class="col-xl-5 col-sm-6 mx-auto">
	<h1>Editing Book</h1>
	
	<div id="error_explanation">
		<% if @book.errors.any? %>
		  <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
		  <ul>
		    <% @book.errors.full_messages.each do |message| %>
		      <li><%= message %></li>
		    <% end %>
		  </ul>
		<% end %>
	</div>
	
	<%= form_with model: @book do |f| %>
	<div class="my-3">
	  <label for="inputTitle">Title</label>
	  <%= f.text_field :title, autofocus: true, id:"book_title",class: "form-control" %>
	</div>
	<div class="my-3">
	  <label for="inputOpinion">ProfileImage</label>
	  <%= f.text_area :body, id:"inputOpinion",class: "form-control" %>
	</div>
	<div class="my-3">
	  <%= f.submit "Update Book",class: "btn btn-success" %>
	</div>
	<% end %>
	<%= link_to "Show", book_path(@book.id) %>
	|
	<%= link_to "Back", books_path %>
</div>