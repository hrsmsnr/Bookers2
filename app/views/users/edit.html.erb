<div class="col-xl-5 col-sm-6 mx-auto">
    <h2>User info</h2>
    
    <div id="error_explanation">
        <% if @user.errors.any? %>
          <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
    </div>
    <div>
        <%= form_with model: @user do |f| %>
            <div class="block my-3">
                <label for="inputName">Name</label>
                <%= f.text_field :name, autofocus: true, id:"inputName",class: "form-control" %>
            </div>
            
            <div class="block my-2">
                <label for="inputImage">Image</label><br />
                <%= f.file_field :profile_image, accept: "image/*" %>
            </div>
            
            <div class="block my-2">
                <label for="inputIntroduction">Introduction</label>
                <%= f.text_area :introduction, id:"inputIntroduction",class: "form-control" %>
            </div>
            
            <%= f.submit "Update User",class: "btn btn-secondary" %>
        <% end %>
    </div>
</div>  